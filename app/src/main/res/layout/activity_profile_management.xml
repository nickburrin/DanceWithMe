<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="seniordesign.com.dancewithme.activities.ProfileManagement">


    <!-- Add photo somehow and make it clickable-->
    <ImageButton
        android:id="@+id/profPic"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:layout_gravity="center"
        android:onClick="changeProfPic"
        android:src="@drawable/android_robot" />

    <TextView
        android:id="@+id/username" style="?android:textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profPic"
        android:textStyle="bold" />

    <Button
        android:id="@+id/edit"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/username"
        android:text="@string/edit"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/label_dance_styles" style="?android:textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/profPic"
        android:text="Dance Styles" />

    <ListView
        android:id="@+id/lv_dance_styles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_dance_styles"
        android:background="@color/white"
        android:divider="@color/grey_input_border"
        android:dividerHeight="1px" />

</RelativeLayout>