<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="seniordesign.com.dancewithme.activities.activities.fragments.MatchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/ib_profPic"
        android:layout_width="300dip"
        android:layout_height="300dip"
        android:layout_gravity="start"
        android:scaleType="centerCrop"
        android:background="@color/transparent"
        android:src="@drawable/android_robot" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/denyButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:onClick="changeProfPic"
            android:src="@drawable/x" />

        <ImageButton
            android:id="@+id/acceptButton"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:onClick="changeProfPic"
            android:src="@drawable/dancebig" />
    </LinearLayout>
</FrameLayout>
