<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="seniordesign.com.dancewithme.fragments.ProfileFragment">


    <!-- Add photo somehow and make it clickable-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/ib_profPic"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_gravity="start"
            android:paddingRight="50dp"
            android:src="@drawable/android_robot" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profPic"
                android:textStyle="bold"
                android:textSize="32sp" />

            <Button
                android:id="@+id/button_edit_profile"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:text="@string/edit_profile"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/label_dance_styles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="90"
                android:text="Dance Styles"
                android:textSize="32sp" />

            <Button
                android:id="@+id/button_add_dancestyles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="+"
                android:textStyle="bold"
                android:textSize="32sp" />

        </LinearLayout>

        <ListView
            android:id="@+id/lv_dance_styles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@color/grey_input_border"
            android:dividerHeight="1px" />

    </LinearLayout>
</LinearLayout>