<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/wallet_holo_blue_light"
    tools:context="seniordesign.com.dancewithme.activities.ProfileManagementActivity">


    <!-- Add photo somehow and make it clickable-->
    <ImageButton
        android:id="@+id/ib_profPic"
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="changeProfPic"
        android:src="@drawable/android_robot" />

    <TextView
        android:id="@+id/tv_username" style="?android:textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profPic"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_edit_profile"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/username"
        android:text="@string/edit_profile"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_dancestyles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_label_dance_styles" style="?android:textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/profPic"
            android:text="Dance Styles" />

        <Button
            android:id="@+id/button_add_dancestyles"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:text="@string/add_styles"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_dancestyles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_dancestyles"
        android:background="@color/white"
        android:divider="@color/grey_input_border"
        android:dividerHeight="1px" />

</RelativeLayout>